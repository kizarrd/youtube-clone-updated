extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="username", name="username", type="text", required)
        input(placeholder="password", name="password1", type="password", required)
        input(type="submit", value="Log in")
        include partials/social-login
    div.auth-switch
        span You don't have an account?  
        a(href="/login") Create one now &rarr;
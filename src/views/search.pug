extends base
include mixins/video

block content
    form(method="GET").search__form
        input(placeholder="Searcy by title", name="keyword" type="text")
        button
            i.fas.fa-search
    div.video-grid       
        each video in videos 
            +video_format(video)
        else 
            span.empty__message ❓ No videos found ❓
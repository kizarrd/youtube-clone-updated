extends base.pug

block content 
    div 
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        lable(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by empty space.", required, type="text", name="hashtags")
        input(class="buttons", type="submit", value="Upload")

block scripts
    script(src="/static/js/recorder.js")